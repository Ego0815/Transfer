SET SERVEROUTPUT ON
DECLARE
    v_sql VARCHAR2(4000);
BEGIN
    FOR t IN (SELECT table_name FROM user_tables) LOOP
        v_sql := 'TRUNCATE TABLE ' || t.table_name || ' CASCADE';
        BEGIN
            EXECUTE IMMEDIATE v_sql;
            DBMS_OUTPUT.put_line(v_sql || ' ;');
        EXCEPTION
            WHEN OTHERS THEN
                -- Falls eine Tabelle nicht truncatable ist (z. B. IOT overflow),
                -- nur Meldung ausgeben, Skript läuft weiter
                DBMS_OUTPUT.put_line('Übersprungen: ' || v_sql || ' -> ' || SQLERRM);
        END;
    END LOOP;
END;
/
